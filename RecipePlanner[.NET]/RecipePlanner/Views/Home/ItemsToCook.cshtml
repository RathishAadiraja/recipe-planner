@model RecipePlanner.Models.ItemsToCook
@{
    ViewData["Title"] = "ItemsToCook";
}

<h1>Write items to be cooked</h1>



@ViewBag.Error
<form asp-action="ItemsToCook">

     
    <div class="form-group">
        <label asp-for="ITCook"></label>
        <textarea asp-for="ITCook" class="form-control" rows="10"></textarea>
        <span asp-validation-for="ITCook" class="text-danger"></span>
    </div>

    <hr />
    <div class="form-group text-center">

        <input type="submit" value="Check all Ingredients" class="btn btn-primary btn-block" asp-action="ItemsToCook" />

    </div>
</form>