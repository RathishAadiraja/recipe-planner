@model RecipePlanner.Models.AddRecipe
@{
    ViewData["Title"] = "EditRecipe";
}

<h1>Edit this item</h1>


@ViewBag.Error
<form asp-action="AddRecipe">
    <div class="form-group">
        <label asp-for="ARFoodName"></label>
        <input asp-for="ARFoodName" class="form-control" />
        <span asp-validation-for="ARFoodName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ARIngredients"></label>
        <textarea asp-for="ARIngredients" class="form-control" rows="6"></textarea>
        <span asp-validation-for="ARIngredients" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="ARHowTomake"></label>
        <textarea asp-for="ARHowTomake" class="form-control" rows="6"></textarea>
        <span asp-validation-for="ARHowTomake" class="text-danger"></span>
    </div>
    <hr />
    <div class="form-group text-center">

        <input name="submit" type="submit" id="Edit" value="Edit" class="btn btn-primary btn-block" asp-action="EditRecipe" />
        <input name="submit" type="submit" id="Process" value="Cancel" class="btn btn-secondary btn-block" asp-action="EditRecipe" />

    </div>
</form>



